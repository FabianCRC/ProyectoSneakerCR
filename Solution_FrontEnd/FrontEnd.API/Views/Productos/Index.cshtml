@model IEnumerable<FrontEnd.API.Models.Productos>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1>Productos</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Agregar Producto</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DescripcionPproducto)
                </th>
                <th>
                    Año
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdMarcaProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTienda)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionPproducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaProductos.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MarcaProductos.MarcaProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tiendas.NombreTienda)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProducto">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdProducto">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdProducto">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>