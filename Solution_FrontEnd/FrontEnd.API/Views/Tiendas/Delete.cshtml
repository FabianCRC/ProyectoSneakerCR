@model FrontEnd.API.Models.Tiendas

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container">


    <h1>Eliminar tienda  @Html.DisplayFor(model => model.NombreTienda)</h1>

    <h3>¿Esta seguro de borrar esta tienda?</h3>
    <div>
         <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreTienda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreTienda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescripcionTienda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescripcionTienda)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTienda" />
