@model FrontEnd.API.Models.MarcaProductos

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h1>Editar</h1>

    <h4>Marca Productos</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdMarca" />
                <div class="form-group">
                    <label asp-for="MarcaProducto" class="control-label"></label>
                    <input asp-for="MarcaProducto" class="form-control" />
                    <span asp-validation-for="MarcaProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la lista de marcas</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>