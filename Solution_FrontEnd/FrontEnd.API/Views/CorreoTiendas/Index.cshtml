@model IEnumerable<FrontEnd.API.Models.CorreoTienda>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Crear nuevo correo de tienda</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTienda)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTienda)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.IdCorreo">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdCorreo">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>