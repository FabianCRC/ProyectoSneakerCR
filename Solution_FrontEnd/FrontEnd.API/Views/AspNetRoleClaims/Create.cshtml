@model FrontEnd.API.Models.AspNetRoleClaims

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h1>Crear</h1>

    <h4>AspNetRoleClaims</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ClaimType" class="control-label"></label>
                    <input asp-for="ClaimType" class="form-control" />
                    <span asp-validation-for="ClaimType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClaimValue" class="control-label"></label>
                    <input asp-for="ClaimValue" class="form-control" />
                    <span asp-validation-for="ClaimValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
