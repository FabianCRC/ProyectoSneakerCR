@model FrontEnd.API.Models.CategoriaProductos

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h1>Eliminar</h1>

    <h3>¿Estás seguro de que quieres eliminar esto?</h3>
    <div>
        <h4>CategoriaProductos</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCategoria" />
            <input type="submit" value="Elimar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver a la lista de categorias</a>
        </form>
    </div>
</div>