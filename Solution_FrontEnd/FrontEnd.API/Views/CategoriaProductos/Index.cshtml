@model IEnumerable<FrontEnd.API.Models.CategoriaProductos>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>CategoriaProductos</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Crear nuevo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCategoria">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdCategoria">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdCategoria">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>